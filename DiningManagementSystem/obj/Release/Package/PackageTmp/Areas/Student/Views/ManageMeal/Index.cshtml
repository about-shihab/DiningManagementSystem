@model BOL.MealInfo

@{
    ViewBag.Title = "Manage Meal";
}

<br />
<br />
<br/>
<h5>Manage your meal here...</h5>
@if (TempData["Msg"] != null)
{
    <div class="alert alert-dismissible alert-info">
        <button type="button" class="close" data-dismiss="alert">&times;</button>
        @TempData["Msg"]
    </div>
}

@using (Html.BeginForm("Create","ManageMeal",FormMethod.Post)) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">

        <hr />
        @Html.ValidationSummary(true)


        <div class="form-group">
            @Html.LabelFor(model => model.StartDate, new { @class = "control-label col-md-2" })
            <div class="col-md-4">
                @Html.TextBoxFor(x => x.StartDate, new
                 {
                    @type = "date",
                    @class = "form-control"
                    })

                @Html.ValidationMessageFor(model => model.StartDate, null, new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.EndDate, new { @class = "control-label col-md-2" })
            <div class="col-md-4">
                @Html.TextBoxFor(x => x.EndDate, new
                 {
                     @type = "date",
                     @class = "form-control"
                 })
                @Html.ValidationMessageFor(model => model.EndDate, null, new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-4 col-md-offset-2">
                @Html.CheckBoxFor(model => model.LunchOff)
                Lunch Off
                @Html.ValidationMessageFor(model => model.LunchOff)

            </div>
            


        </div>

        <div class="form-group">
            <div class="col-md-4 col-md-offset-2">
                @Html.CheckBoxFor(model => model.DinnerOff)
                Dinner Off
                @Html.ValidationMessageFor(model => model.DinnerOff)
            </div>
        </div>
        
        <div class="form-group" id="Lunch">

            @Html.LabelFor(model => model.LunchGuestMeal, new { @class = "control-label col-md-2" })
            <div class="col-md-4">
                @Html.TextBoxFor(model => model.LunchGuestMeal, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.LunchGuestMeal)
            </div>
        </div>
       

        <div class="form-group" id="Dinner">
            @Html.LabelFor(model => model.DinnerGuestMeal, new { @class = "control-label col-md-2" })
            <div class="col-md-4">
                @Html.TextBoxFor(model => model.DinnerGuestMeal, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.DinnerGuestMeal)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Submit" class="btn btn-primary" />
            </div>
        </div>
    </div>
}
<script src="~/Scripts/jquery-2.2.2.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.js"></script>

<script>
    $(function () {
        $("#LunchOff").click(function () {
            if ($(this).is(':checked')) {
                $("#Lunch").hide();
            }
            else {
                $("#Lunch").show();
            }
        });
    });
</script>
<script>
    $(function () {
        $("#DinnerOff").click(function () {
            if ($(this).is(':checked')) {
                $("#Dinner").hide();
            }
            else {
                $("#Dinner").show();
            }
        });
    });
</script>
